<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:padding="10dp">

            <!-- ImageView para la imagen -->
            <ImageView
                android:id="@+id/bagfe"
                android:layout_width="100dp"
                android:layout_height="112dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/labelsContainer"
                android:layout_width="83dp"
                android:layout_height="115dp"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bagfe"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4">

                <TextView
                    android:id="@+id/textViewEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Equipo:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Ranking:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewvictor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="V/E/D:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewGoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goles:"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- LÃ­nea divisoria -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/labelsContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Segundo LinearLayout para los valores -->
            <LinearLayout
                android:id="@+id/valuesContainer"
                android:layout_width="171dp"
                android:layout_height="109dp"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/labelsContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="Champions"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_alternate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_alternate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

