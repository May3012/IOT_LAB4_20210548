<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="363dp"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:padding="10dp">

            <!-- LÃ­nea divisoria -->

            <!-- Segundo LinearLayout para los valores -->
            <LinearLayout
                android:id="@+id/labelsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07"
                app:layout_constraintWidth_percent="0.4">

                <TextView
                    android:id="@+id/textViewNombreCompetencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Competencia"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewRondaBusqueda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Ronda:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEquipoLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Equpo Local:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEquipoVisitante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Equipo Visitante:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Resultado:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Fecha:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEspectadores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Cant. Espectadores:"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPostions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/labelsContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:id="@+id/text_view_name_competencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="Champions"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_ronda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_equipo_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/text_view_equipo_visitante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
                <TextView
                    android:id="@+id/text_view_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
                <TextView
                    android:id="@+id/text_view_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
                <TextView
                    android:id="@+id/text_view_espectadores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:maxLines="1"
                    android:text="La poderosa Liga 1"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <ImageView
                android:id="@+id/bagfe"
                android:layout_width="200dp"
                android:layout_height="144dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/containerPostions" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

